@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4" style="display:flex; justify-content:space-between;">
            <p style="align-self: flex-end">@DateTime.Now.ToLongDateString()</p>
            <AuthorizeView>
                <p style="align-self: flex-end">Logged as: @context.User.Identity.Name</p>
            </AuthorizeView>
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
