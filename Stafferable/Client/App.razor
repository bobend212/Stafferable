<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h3>You're not allowed to this page.</h3>
                    <h5>What can I do?</h5>
                    <ul>
                        <li><h5>- Please <MudLink Href="login" Underline="Underline.Always">login</MudLink> or <MudLink Href="register" Underline="Underline.Always">register</MudLink> for a new account.</h5></li>
                        <li><h5>- Ask your administrator to grant access.</h5></li>
                    </ul>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

